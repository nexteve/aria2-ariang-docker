{$DOMAIN} {
  gzip
  log stdout
  errors stdout
  filebrowser / /data {
    database /root/filebrowser.db
  }
}

{$DOMAIN}/ui {
  root /usr/local/www/aria2
  timeouts none
  gzip
  log stdout
  errors stdout

  basicauth / {$ARIA2_USER} {$ARIA2_PWD}
}

{$DOMAIN}/css {
  root /usr/local/www/aria2/css
  gzip
}

{$DOMAIN}/js {
  root /usr/local/www/aria2/js
  gzip
}

{$DOMAIN}/fonts {
  root /usr/local/www/aria2/fonts
  gzip
}

{$DOMAIN}/langs {
  root /usr/local/www/aria2/langs
  gzip
}